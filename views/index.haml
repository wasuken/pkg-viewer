#main
  - @grps.each do |k, recs|
    %h2 #{k}
    %table.table
      %thead
        %tr
          %th
            hostname
          %th
            pkg_name
          %th
            current_version
      %tbody
        - recs.each do |rec|
          - hn = rec[:hostname]
          - pn = rec[:pkg_name]
          - cv = rec[:current_version]
          %tr
            %td #{hn}
            %td #{pn}
            %td #{cv}
